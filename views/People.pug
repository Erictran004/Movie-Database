doctype html
head
  link(rel='stylesheet' type='text/css' href='/CSS/navstyle.css')
  link(rel='stylesheet' type='text/css' href='/CSS/bodystyle.css')
  link(rel='stylesheet' type='text/css' href='/CSS/homepagesearchbar.css')
  style.
    .userProfileSquare{
    vertical-align: top;
    background: rgb(79, 115, 156);
    height: 100vh;
    width: 100vw;
    border: 0;
    border-radius: 2vw;
    padding: 5vh 1vw;
    box-sizing: border-box;
    z-index: 1;
    }
    .userInfo{
    position: relative;
    }
    .userActivity{
    color: aliceblue;
    text-align: left;
    }
    .followbtn{
    position: relative;
    text-align: right;
    }
    .movieposter{
    position: relative;
    vertical-align: left;
    width: 10vw;
    height: 30vh;
    }
    hr.dashed {
    border-top: 3px dashed #bbb;
    }
    .divider{
    width: 2vw;
    height:auto;
    display:inline-block;
    }
    div.Added {
    position: relative;
    background-color: rgb(79, 115, 156);
    width: 95vw;
    overflow: auto;
    white-space: nowrap;
    }
.topnavigation
  if type == 1
    a.nav(href='/homepage') Home
    a.nav(href=curUser.URL) My Account
    a.nav(href='/genres') Genres
    a.nav(href='/movies') Movies
    a.nav(href='/users') Users
    a.nav(href='/actors') Actors
    a.selected.nav(href='/directors') Directors
    a.nav(href='/writers') Writers
  if type == 2
    a.nav(href='/homepage') Home
    a.nav(href=curUser.URL) My Account
    a.nav(href='/genres') Genres
    a.nav(href='/movies') Movies
    a.nav(href='/users') Users
    a.nav.selected(href='/actors') Actors
    a.nav(href='/directors') Directors
    a.nav(href='/writers') Writers
  if type == 3
    a.nav(href='/homepage') Home
    a.nav(href=curUser.URL) My Account
    a.nav(href='/genres') Genres
    a.nav(href='/movies') Movies
    a.nav(href='/users') Users
    a.nav(href='/actors') Actors
    a.nav(href='/directors') Directors
    a.nav.selected(href='/writers') Writers
    
  a.notification(href='/notifications')
    span 	&#128276;
table.CSSTable(cellpadding='50')
  br
  br
  br
  tr
    td.userProfileSquare
      .userInfo(style='color: white;')
        h1 #{PeopleInfo.name}
        button.dropbtn Followers
        .divider
        button.dropbtn Following
        br
      .followbtn
        button#follow.dropbtn Follow
        br
      .followbtn
        button#unfollow.dropbtn Unfollow
      hr.solid
      .userActivity
        label Works:
        br
        .Added
          each val in MovieObj
            a#displayReviewedMovies(href=val.URL)
              img#poster.movieposter(src=val.Poster)
  