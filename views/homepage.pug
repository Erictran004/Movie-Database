doctype html
head
  link(rel='stylesheet' type='text/css' href='navstyle.css')
  link(rel='stylesheet' type='text/css' href='bodystyle.css')
  link(rel='stylesheet' type='text/css' href='homepagesearchbar.css')
  script(type='text/javascript' src='client.js')
  style.
    .moviesSquare{
    text-align: middle;
    vertical-align: top;
    background: rgb(79, 115, 156);
    height: 100vh;
    width: 100vw;
    border: 0;
    color: white;
    border-radius: 2vw;
    box-shadow: 0 10px 20px rgba(0,0,0,0.19), 0 6px 6px rgba(0,0,0,0.23);
    padding: 5vh 3vw;
    box-sizing: border-box;
    z-index: 1;
    }
    .movieposter{
    vertical-align: left;
    width: 10vw;
    height: 30vh;
    }
    #mainsearch{
      width:60%;
      height: 5%;
    }
    #peoplesearch{
      width:60%;
      height: 5%;
    }
    #searchpeople{
      width:8vw
    }
.topnavigation
    a.nav.selected(href='/homepage') Home
    a.nav(href=curUser.URL) My Account
    a.nav(href='/genres') Genres
    a.nav(href='/movies') Movies
    a.nav(href='/users') Users
    a.nav(href='/actors') Actors
    a.nav(href='/directors') Directors
    a.nav(href='/writers') Writers
    a.notification(href='/notifications')
      span 	&#128276;
table.CSSTable(cellpadding='50')
  br
  br
  br
  tr
    td.profileSquare
      .Profilepicture
        a(href=curUser.URL)
          img#profilepic.profile(src=curUser.profilePicture)
      .Usermame(style='color: white;')
        label #{curUser.username}
        form(action='/logout' method='post')
          button.dropbtn(type='logout') Logout
      .profileInfo
      br
      input#username(type='text' name='username' required='')
      br
      button(type='searchuser' onclick='searchUser()') search user...
      br
      br
      input#profile(type='text' name='profile' required='')
      br
      button(type='searchuser' onclick='changeProfile()') enter link to change profile picture
      br
      br
      .dropdown
        label#followercount #{curUser.followers.length}
        br 
        button.dropbtn Followers
        .dropdown-content
         ul#follower(type='followers')
      br
      br
      .dropdown
        label#followingcount  #{curUser.following.length} 
        br
        button.dropbtn Following
        .dropdown-content
          ul#following(type='following')
      br
      br
      button(type='button') Settings
      br
      br
      if curUser.contributingUser == true
        input#contribute(type='checkbox' name='contribute' onclick="updateContributingUser()" checked='checked')
        label(for='contribute')  Contributing User
      else
        input#contribute(type='checkbox' name='contribute' onclick="updateContributingUser()")
        label(for='contribute')  Contributing User
    td.moviesSquare
      h1 Movies:
      .dropdown
        button.dropbtn#searchType Filter
        .dropdown-content
          a(onclick="selectGenre()") genre
          a(onclick="selectMinRating()") minrating
          a(onclick='selectTitle()') title
      input#mainsearch(type='text' placeholder='Search..')
      button.dropbtn#search(onclick="searchMovie()") Search
      h1 People:
      .dropdown
        button.dropbtn#searchTypeP Type
        .dropdown-content
          a(onclick="selectactor()") actors
          a(onclick="selectwriter()") writers
          a(onclick='selectdirector()') directors
      .dropdown 
        button.dropbtn#searchfilter Filter
        .dropdown-content
          a(onclick="selectname()") name
          a(onclick="selectworks()") works

      input#peoplesearch(type='text' placeholder='Search..')
      button.dropbtn#searchpeople(onclick="searchPeople()") Search

      a(href= "/addmovie")
        button Add Movie &#9819;

      a(href= "/addperson")
         button Add Person &#9819;

      
